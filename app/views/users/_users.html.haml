%table#users
  %thead
    %tr
      %th name
      %th email
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td
          = user.login
        %td
          = user.email
        %td
          = link_to "Edit", edit_user_path(user), :remote => true
        %td
          = link_to "Destroy", user_path(user), :remote => true, :confirm => 'Are you sure?', :method => :delete

= will_paginate @users
