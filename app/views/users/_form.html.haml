= form_for(@user, :remote => true) do |f|
  .user_errors    
    = f.error_messages

  .field
    = f.label :username
    = f.text_field :login
  .field
    = f.label :email
    = f.text_field :email
  .field.user_password_field
    = f.label :password
    = f.password_field :password
  .field.user_password_field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %br
  %hr
  .actions
    .right-on
      = link_to 'Cancel', users_path, {:onclick => "$(this).parents('div.user_form').toggle();"}
      = f.submit
